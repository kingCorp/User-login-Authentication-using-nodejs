extends layout

block content
    h3 Please fill out the form
    .row.container
        .col-md-4.col-md-offset-4(style='padding-top:25px;')
            h1(style='font-size:50px;') Register
            ul.errors
                if errors
                    each error, i in errors
                        li.alert.alert-danger #{error.msg}
            form(method='post', action='/users/register')
                .form-group
                    label(for='email') Email address:
                    input#email.form-control(type='email', name='email', placeholder='email address', required)
                .form-group
                    label(for='username') Username:
                    input#username.form-control(type='text', name='username', placeholder='username', required)
                .form-group
                    label(for='password') Password:
                    input#password.form-control(type='password', name='password', placeholder='password', required)
                .form-group
                    label(for='Confirmpassword') Confirm Password:
                    input#password.form-control(type='password', name='password2', placeholder='confirm password', required)
                button#submit.btn.btn-primary(type='submit') Sign up
                br
                br
                a(href='users/signin') Already a member Sign in
